                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label" for="year">Jahrgang</label>
                                <div class="col-lg-6">
                                    <input class="form-control" id="year" name="year" type="text">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label" for="baselibrary">Bibliothek</label>
                                <div class="col-lg-6">
                                    <select id="base" name="baselibrary" class="form-control">
                                        <option value="">bitte w√§hlen</option>
                                        {{#each libraries}}
                                            <option>{{this}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Starten</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

