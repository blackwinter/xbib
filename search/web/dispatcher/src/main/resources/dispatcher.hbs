<!DOCTYPE html>
<html>
<head>
    <title>hbz Leitwegrecherche</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap -->
    <link rel="stylesheet" media="screen" href="static/css/bootstrap.min.css">
    <link rel="stylesheet" media="screen" href="static/css/bootstrap-theme.min.css">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script type="text/javascript" src="static/js/html5shiv.js"></script>
    <script type="text/javascript" src="static/js/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">Eingabe</div>
                <div class="panel-body">
                    <form class="form-horizontal" action="{{form_action}}" method="post">
                        <fieldset>
                            <legend>Leitwegrecherche</legend>
                            <div class="form-group">
                                <label class="col-lg-2 control-label" for="id">ZDB-ID</label>
                                <div class="col-lg-6">
                                    <input class="form-control" id="id" name="id" type="text" value="{{id}}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label" for="year">Jahrgang</label>
                                <div class="col-lg-6">
                                    <input class="form-control" id="year" name="year" type="text" value="{{year}}">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-2 control-label" for="baselibrary">Bibliothek</label>
                                <div class="col-lg-6">
                                    <select id="base" name="baselibrary" class="form-control">
                                        <option value="">bitte wählen</option>
                                        {{#each libraries}}
                                            <option>{{this}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Starten</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{#each list}}
        <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    {{#if institutioncount}}
                        <div>Leitweg für {{@id}} Jahrgang {{date}}</div>
                        <div>Es wurden {{institutioncount}} liefernde Institutionen gefunden.</div>
                    {{else}}
                        <div>Kein Leitweg gefunden</div>
                    {{/if}}
                </div>
                <div class="panel-body">
                    <ol class="list-group">
                        {{#each institution}}
                            <li class="list-group-item">
                                <span class="badge">{{service.[0].organization}}</span>
                                <p><strong>
                                    {{#if pilot}}
                                        <span style="color: green">{{isil}}</span>
                                    {{else}}
                                        {{#if base}}
                                            <span style="color: red">{{isil}}</span>
                                        {{else}}
                                            <span>{{isil}}</span>
                                        {{/if}}
                                    {{/if}}
                                </strong></p>
                                <div>Es sind {{servicecount}} Services vorhanden</div>
                                {{#each service}}
                                    <p style="border-bottom: 1px solid #ccc">
                                    <div>Service-Nummer {{@index}} &nbsp;&mdash;&nbsp; Service-Rang {{priority}}<span style="float:right">{{@id}}</span></div>
                                    <div>{{i18n carriertype bundle="carriertype" locale="de"}}
                                    {{#each mode}}
                                        <span>&nbsp;&mdash;&nbsp;{{i18n this bundle="mode" locale="de"}}</span>
                                    {{/each}}
                                    {{#each distribution}}
                                        <span>&nbsp;&mdash;&nbsp;{{i18n this bundle="distribution" locale="de"}}</span>
                                    {{/each}}
                                    </div>
                                    {{#if comment}}
                                        <div><em>{{comment}}</em></div>
                                    {{/if}}
                                    {{#if info.textualholdings}}
                                        <div>Bibliothek {{serviceisil}}&nbsp;&mdash;&nbsp;Bestand {{info.textualholdings}}</div>
                                    {{/if}}
                                    {{#each info.location}}
                                        <div>
                                            {{#if shelvinglocation}}Signatur {{shelvinglocation}}{{/if}}
                                            {{#if collection}}&nbsp;&mdash;&nbsp;Standort {{collection}}{{/if}}
                                            {{#if name}}&nbsp;&mdash;&nbsp;Beschreibung {{name}}{{/if}}
                                        </div>
                                    {{/each}}
                                    {{#if info.license}}
                                        <div>
                                            <span>{{i18n info.license.type bundle="license" locale="de"}}</span>
                                            <span>&nbsp;&mdash;&nbsp;{{i18n info.license.licensetype bundle="license" locale="de"}}</span>
                                            <span>&nbsp;&mdash;&nbsp;{{i18n info.license.pricetype bundle="license" locale="de"}}</span>
                                            {{#each info.license.readme}}<div><a href="{{this}}">README</a></div>{{/each}}
                                        </div>
                                    {{/if}}
                                    {{#if info.links}}
                                        {{#each ../../links}}
                                            <div>
                                                <a href="{{uri}}">{{nonpublicnote}}</a>
                                            </div>
                                        {{/each}}
                                        {{#each info.links}}
                                            <div>
                                                <a href="{{uri}}">{{nonpublicnote}}</a>
                                            </div>
                                        {{/each}}
                                    {{/if}}
                                    {{#each @parent}}
                                        <div>ZDB <a href="http://ld.zdb-services.de/resource/{{this}}">{{this}}</a></div>
                                    {{/each}}
                                    </p>
                                {{/each}}
                            </li>
                        {{/each}}
                    </ol>
                </div>
            </div>
        </div>
        </div>
    {{/each}}
</div>

<script type="text/javascript" src="static/js/jquery-2.1.0.min.js"></script>
<script type="text/javascript" src="static/js/bootstrap.min.js"></script>

</body>
</html>