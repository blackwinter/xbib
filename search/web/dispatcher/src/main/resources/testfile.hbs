<!DOCTYPE html>
<html>
<head>
    <title>hbz Leitwegrecherche</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap -->
    <link rel="stylesheet" media="screen" href="static/css/bootstrap.min.css">
    <link rel="stylesheet" media="screen" href="static/css/bootstrap-theme.min.css">

    <!-- Bootstrap Admin Theme -->
    <link rel="stylesheet" media="screen" href="static/css/bootstrap-admin-theme.css">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script type="text/javascript" src="static/js/html5shiv.js"></script>
    <script type="text/javascript" src="static/js/respond.min.js"></script>
    <![endif]-->
</head>
<body class="bootstrap-admin-without-padding">
<div class="container">
    <div class="row">
        {{#each list}}
            <div class="panel panel-success">
                <div class="panel-heading">Leitweg für {{@id}} Jahrgang {{date}}</div>
                <div class="panel-body">
                    <ol class="list-group">
                        {{#each institution}}
                            <li class="list-group-item">
                                <span class="badge">{{servicecount}}</span>
                                <p><span>{{service.[0].organization}}&nbsp;</span>
                                    {{#if pilot}}
                                        <span style="color: green">{{isil}}</span>
                                    {{else}}
                                        {{#if base}}
                                            <span style="color: red">{{isil}}</span>
                                        {{else}}
                                            <span>{{isil}}</span>
                                        {{/if}}
                                    {{/if}}
                                </p>
                                {{#each service}}
                                    <p>
                                    <div>Priorität {{priority}}</div>
                                    <div>{{i18n carriertype bundle="carriertype" locale="de"}}</div>
                                    {{#each mode}}
                                        <span>{{i18n this bundle="mode" locale="de"}}&nbsp;</span>
                                    {{/each}}
                                    {{#each distribution}}
                                        <span>{{i18n this bundle="distribution" locale="de"}}&nbsp;</span>
                                    {{/each}}
                                    {{#if info.textualholdings}}
                                        <div>Bibliothek {{serviceisil}} Bestand {{info.textualholdings}}</div>
                                    {{/if}}
                                    {{#each info.location}}
                                        <p>
                                            {{#if shelvinglocation}}Signatur {{shelvinglocation}}{{/if}}
                                            {{#if collection}}Standort {{collection}}{{/if}}
                                            {{#if name}}Beschreibung {{name}}{{/if}}
                                        </p>
                                    {{/each}}
                                    {{#if info.links}}
                                        {{#each ../../links}}
                                            <div>
                                                <a href="{{uri}}">{{nonpublicnote}}</a>
                                            </div>
                                        {{/each}}
                                        {{#each info.links}}
                                            <div>
                                                <a href="{{uri}}">{{nonpublicnote}}</a>
                                            </div>
                                        {{/each}}
                                    {{/if}}
                                    </p>
                                {{/each}}
                            </li>
                        {{/each}}
                    </ol>
                </div>
            </div>
        {{/each}}
    </div>
</div>

<script type="text/javascript" src="static/js/jquery-2.1.0.min.js"></script>
<script type="text/javascript" src="static/js/bootstrap.min.js"></script>

</body>
</html>