                                                {{/ifCond}}
                                            {{/ifCond}}
                                        {{/each}}
                                        {{#each distribution}}
                                            <span>&nbsp;&mdash;&nbsp;{{i18n this bundle="distribution" locale="de"}}</span>
                                        {{/each}}
                                    </div>
                                    {{#if comment}}
